<script type="text/javascript" src="~/Scripts/Map/map.js"></script>
<script type="text/javascript" src="~/Scripts/Map/context-menu.js"></script>
<script type="text/javascript" src="~/Scripts/Map/map_marker.js"></script>
<script type="text/javascript" src="~/Scripts/Map/map_route.js"></script>

<div class="container-fluid row-padding h-100">
    <div class="row p-2">
        <form class="form-inline">
            <div class="form-group mx-2">
                <label class="mr-2" for="idSelectPlace">Select place type</label>
                <select class="form-control" id="idSelectPlace">
                    <option>Hotel</option>
                </select>
            </div>
            <div class="form-group mx-2">
                <label class="mr-2" for="idSelectRadius">Select radius</label>
                <select class="form-control" id="idSelectRadius">
                    <option>200</option>
                    <option>500</option>
                    <option>1000</option>
                    <option>1500</option>
                    <option>2000</option>
                </select>
            </div>

            <input class="btn btn-primary ml-2" type="button" id="searchButton" value="Search" onClick="searchLocations()" />
        </form>
    </div>
    <div class="row p-2 d-flex">
        <div class="col-lg-8 p-2">
            <div id="map"></div>
        </div>
        <div class="col-lg-4 p-2 hotels-list-table">
            <table id="places-list-table" class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Address</th>
                </tr>
                <tbody id="places-list"></tbody>
                </thead>
            </table>
            <div id="directions-list"></div>
        </div>
    </div>
</div>